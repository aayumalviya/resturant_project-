<div class="content" style="width:100%; height: 100%; background-color: whitesmoke;">
  <div class="container-md" style="margin-top: 10px;">
    <div class="row"> 
      <div class="col-4">
        <div class="card" style="width: 30rem; margin-top: 20px; text-align: center;">
          <ul class="list-group list-group-flush" style="margin-bottom: 0;">
              <li class="list-group-item">
              <span class="glyphicon glyphicon-pencil" style="color:orange;"> <%= link_to "Add Menu", "#" , class:"link-dark ", data: {"toggle": "modal" ,"target": "#myModal"}, style:"font-weight:bold;" %></span>
              </li>
              <hr style="margin-top: 0; margin-bottom: 0;">
              <li class="list-group-item">
                <span class="glyphicon glyphicon-list-alt" style="color:orange;"> <%= link_to "My Restaurant", restaurants_index_path, class:"link-dark" ,style:"font-weight:bold;"%></span>
              </li>
          </ul>
        </div> 
      </div> 
    
      <div class="col-8" >
        <div id="card1">
            <div id="menu-form"> 
              <%= render "index" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Modal Header</h4>
      </div>
      <div class="modal-body">
        <div id="menu-form">
          <%= render "form" %>
        </div>
      </div>
    </div>
  </div>
</div>
