<style type="text/css">

.rate {
    float: left;
    height: 46px;
    padding: 0 10px;
}
.rate:not(:checked) > input {
    position:absolute;
    top:-9999px;
}
.rate:not(:checked) > label {
    float:right;
    width:1em;
    overflow:hidden;
    white-space:nowrap;
    cursor:pointer;
    font-size:30px;
    color:#ccc;
}
.rate:not(:checked) > label:before {
    content: 'â˜… ';
}
.rate > input:checked ~ label {
    color: #FFC700;
}
.rate:not(:checked) > label:hover,
.rate:not(:checked) > label:hover ~ label {
    color: #DEB217;
}
.rate > input:checked + label:hover,
.rate > input:checked + label:hover ~ label,
.rate > input:checked ~ label:hover,
.rate > input:checked ~ label:hover ~ label,
.rate > label:hover ~ input:checked ~ label {
    color: #C59B08;
}

.form{
  width: 300px;
  padding-left: 50px;
  margin-left: 20px;
  margin-top: 20px;
  margin-bottom: 30px;
}
/* Modified from: https://github.com/mukulkant/Star-rating-using-pure-css */
</style>

<div class="form">
<%= form_for([ @restaurant , @restaurant.reviews.build ], remote: true) do  |form| %>
    
    	<%= form.label :Title, class:"form-label" %>
    	<%= form.text_field :title, class:"form-control" %>
    
    	<%= form.label :Description, class:"form-label" %>
    	<%= form.text_field :description, class:"form-control" %>
    <br> 
    <div class="rate">
    <span style="font-weight:bold">Rating :</span>

      <%= form.label :rating, for: "review_rating_5" %>
    	<%= form.radio_button :rating,['5'] %>
    	<%= form.label :rating,for: "review_rating_4" %>
    	<%= form.radio_button :rating,['4'] %>
    	<%= form.label :rating,for: "review_rating_3" %>
    	<%= form.radio_button :rating,['3'] %>
    	<%= form.label :rating,for: "review_rating_2" %>
    	<%= form.radio_button :rating,['2'] %>
    	<%= form.label :rating,for: "review_rating_1" %>
    	<%= form.radio_button :rating,['1'] %>
    </div>
    <br><br>
    
    	<%= form.submit 'Add' , class:"btn btn-success btn-sm" %>
</div>

<% end %>
