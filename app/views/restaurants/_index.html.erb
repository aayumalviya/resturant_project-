<% @restaurants.each do |restaurant| %>
 	<div id="restaurant<%= restaurant.id %>">
	  	<div class="card" id="card1" style="margin-top: 20px; height: 130px;">
					<div class="row">
						<div class="col-2" style="margin-top: 15px;">
					    <% if restaurant.image.attached? %>
								<%= image_tag restaurant.image, style:"height:100px; width:100px; margin-left: 20px;" %>
							<% end %>
						</div>
						<div class="col-6" style="margin-top: 20px;">
				      	<%= link_to restaurant.name , restaurant , class:"link-danger" %>
								<br><span style="font-size:18px; "><%= restaurant.full_address %></span>

				    </div>
			    
			    	<div class="col-4" style="margin-top:30px;"> 
			    			
			    			<div class="row">
				    			
				    			<div class="col-2">
									<button><%= link_to edit_restaurant_path(restaurant) , remote: true do %>		<span class="glyphicon glyphicon-edit"  style="color:orange;"></span>
										<% end %> 
										</button>
									</div>
									
									<div class="col-6">
									<%= button_to restaurant_path(restaurant),method: :delete, remote: true do %>
										<span class="glyphicon glyphicon-trash" style="color:orange;"></span>
										<% end %>
									</div>
								</div>
			    	</div>
				</div> 
	  	</div>
 	</div>
<% end %>
